@model List<Category>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Category List</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Profile</th>
                                <th>VatNo.</th>
                                <th>Created</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                                @foreach(var item in Model)
{
                                <tr>
                                    <td>@item.CategoryID</td>
                                    <td>@item.CategoryName</td>
                                    @if(item.CategoryStatus==true)
                                    {
                                        <td><label class="badge badge-success badge-pill">Active</label></td>
                                    }
                                    else
                                    {
                                        <td><label class="badge badge-danger badge-pill">Inactive</label></td>
									}
                                    <td>@item.</td>
                                    <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Update</a></td>
                                </tr>
                                    
                                }
                                
                        </tbody>
                    </table>
                    <br><br />
                    <a href="/Category/CreateCategory" class="btn btn-outline-primary">Add New Category</a>
                </div>
            </div>
        </div>
    </div>
</div>