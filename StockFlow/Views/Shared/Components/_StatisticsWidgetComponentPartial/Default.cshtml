<div class="main-panel">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Statistics</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.CategoryCount</h2>
                                </div>
                                <small class="text-gray">There are @ViewBag.CategoryCount categories in total</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-chart-pie text-info icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Highest Product Price</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">
                                        <span>@String.Format("{0:N2}", ViewBag.ProductMaxPrice)</span>

                                        <span style="font-family: 'Segoe UI', 'Arial', 'sans-serif';">₺</span>
                                    </h2>
                                </div>
                                <small class="text-gray">Highest product is @ViewBag.ProductMaxPriceProduct</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-tags text-danger icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Lowest Product Price</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">
                                        <span>@String.Format("{0:N2}", ViewBag.ProductMinPrice)</span>

                                        <span style="font-family: 'Segoe UI', 'Arial', 'sans-serif';">₺</span>
                                    </h2>
                                    
                                </div>
                                <small class="text-gray">Lowest product is @ViewBag.ProductMinPriceProduct</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-bell text-warning icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Products</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.totalSumProductStock</h2>
                                </div>
                                <small class="text-gray">There are @ViewBag.totalSumProductStock product in total</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-archive text-info icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Average product stock</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">
                                        @ViewBag.averageProductStock
                                    </h2>
                                </div>
                                <small class="text-gray">Highest product is </small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-database text-primary icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Average Product Price</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">
                                        <span>@String.Format("{0:N2}", ViewBag.averageProductPrice)</span>

                                        <span style="font-family: 'Segoe UI', 'Arial', 'sans-serif';">₺</span>
                                    </h2>

                                </div>
                                <small class="text-gray">Average product price is @ViewBag.averageProductPrice</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-bullhorn text-warning icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Bigger Price then 1000</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">@ViewBag.biggerPriceThen1000ProductCount</h2>
                                </div>
                                <small class="text-gray">There are @ViewBag.biggerPriceThen1000ProductCount in products</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-clock text-info icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Get ID is 4 Product Name</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">
                                        @ViewBag.getIDIs4ProductName
                                    </h2>
                                </div>
                                <small class="text-gray">ID is 4 Product Name  @ViewBag.getIDIs4ProductName </small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas  fa-coffee text-primary icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-0">Stock Count Bigger 50 And Smaller 100</h4>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-inline-block pt-3">
                                <div class="d-md-flex">
                                    <h2 class="mb-0">
                                        @ViewBag.stockCountBigger50AndSmaller100ProductCount
                                    </h2>
                                   

                                </div>
                                <small class="text-gray">Stock Count Bigger 50 And Smaller 100 is @ViewBag.stockCountBigger50AndSmaller100ProductCount</small>
                            </div>
                            <div class="d-inline-block">
                                <i class="fas fa-filter text-warning icon-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../partials/_footer.html -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a href="https://www.urbanui.com/" target="_blank">Urbanui</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="far fa-heart text-danger"></i></span>
        </div>
    </footer>
    <!-- partial -->
</div>